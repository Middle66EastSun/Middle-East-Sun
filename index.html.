        // Ø´Ø¨ÛŒÙ‡â€ŒØ³Ø§Ø²ÛŒ Ù‚ÛŒÙ…Øªâ€ŒÙ‡Ø§ÛŒ Ù„Ø­Ø¸Ù‡â€ŒØ§ÛŒ
        function updatePrices() {
            const assets = [
                { id: 'oil-price', basePrice: 84.25, volatility: 0.02, currency: 'usd' },
                { id: 'gas-price', basePrice: 2.45, volatility: 0.03, currency: 'usd' },
                { id: 'gold-kilo-price', basePrice: 75240000, volatility: 0.01, currency: 'irr' },
                { id: 'gold-bar-price', basePrice: 6019200, volatility: 0.012, currency: 'irr' },
                { id: 'ethylene-price', basePrice: 1125, volatility: 0.025, currency: 'usd' },
                { id: 'propylene-price', basePrice: 985, volatility: 0.028, currency: 'usd' },
                { id: 'benzene-price', basePrice: 1340, volatility: 0.022, currency: 'usd' },
                { id: 'methanol-price', basePrice: 420, volatility: 0.03, currency: 'usd' },
                { id: 'urea-price', basePrice: 285, volatility: 0.035, currency: 'usd' },
                { id: 'pvc-price', basePrice: 875, volatility: 0.02, currency: 'usd' }
            ];

            assets.forEach(asset => {
                const element = document.getElementById(asset.id);
                if (!element) return;
                
                const change = (Math.random() - 0.5) * asset.volatility;
                const newPrice = asset.basePrice * (1 + change);
                const changePercent = (change * 100).toFixed(1);
                const changeValue = (asset.basePrice * change);
                
                const priceValue = element.querySelector('.price-value');
                const priceChange = element.querySelector('.price-change');
                
                if (asset.currency === 'irr') {
                    // Ù‚ÛŒÙ…Øª Ø·Ù„Ø§ Ø¨Ù‡ ØªÙˆÙ…Ø§Ù†
                    priceValue.textContent = `${Math.round(newPrice).toLocaleString('fa-IR')} ï·¼`;
                    if (change > 0) {
                        element.className = 'price-item positive';
                        priceChange.textContent = `+${changePercent}% (+${Math.abs(Math.round(changeValue)).toLocaleString('fa-IR')})`;
                    } else {
                        element.className = 'price-item negative';
                        priceChange.textContent = `${changePercent}% (-${Math.abs(Math.round(changeValue)).toLocaleString('fa-IR')})`;
                    }
                } else {
                    // Ù‚ÛŒÙ…Øª Ù†ÙØªØŒ Ú¯Ø§Ø² Ùˆ Ù¾ØªØ±ÙˆØ´ÛŒÙ…ÛŒ Ø¨Ù‡ Ø¯Ù„Ø§Ø±
                    if (asset.basePrice < 10) {
                        priceValue.textContent = `$${newPrice.toFixed(2)}`;
                        const changeValueFixed = Math.abs(changeValue).toFixed(2);
                        if (change > 0) {
                            element.className = 'price-item positive';
                            priceChange.textContent = `+${changePercent}% (+$${changeValueFixed})`;
                        } else {
                            element.className = 'price-item negative';
                            priceChange.textContent = `${changePercent}% (-$${changeValueFixed})`;
                        }
                    } else {
                        priceValue.textContent = `$${Math.round(newPrice).toLocaleString()}`;
                        const changeValueFixed = Math.abs(Math.round(changeValue));
                        if (change > 0) {
                            element.className = 'price-item positive';
                            priceChange.textContent = `+${changePercent}% (+$${changeValueFixed})`;
                        } else {
                            element.className = 'price-item negative';
                            priceChange.textContent = `${changePercent}% (-$${changeValueFixed})`;
                        }
                    }
                }
            });

            // Ø¨Ù‡â€ŒØ±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ø²Ù…Ø§Ù†
            document.getElementById('last-update').textContent = new Date().toLocaleTimeString('fa-IR');
        }

        // Ù†Ù…ÙˆØ¯Ø§Ø± Ø³Ø§Ø¯Ù‡ Ø¨Ø§ Canvas
        function drawChart() {
            const canvas = document.getElementById('priceChart');
            const ctx = canvas.getContext('2d');
            
            // Ù¾Ø§Ú© Ú©Ø±Ø¯Ù† canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            
            // Ø±Ø³Ù… Ù…Ø­ÙˆØ±Ù‡Ø§
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.3)';
            ctx.lineWidth = 1;
            
            // Ø®Ø· Ø§ÙÙ‚ÛŒ
            for (let i = 0; i < 6; i++) {
                const y = (canvas.height / 5) * i;
                ctx.beginPath();
                ctx.moveTo(0, y);
                ctx.lineTo(canvas.width, y);
                ctx.stroke();
            }
            
            // Ø®Ø· Ø¹Ù…ÙˆØ¯ÛŒ
            for (let i = 0; i < 25; i++) {
                const x = (canvas.width / 24) * i;
                ctx.beginPath();
                ctx.moveTo(x, 0);
                ctx.lineTo(x, canvas.height);
                ctx.stroke();
            }
            
            // Ø±Ø³Ù… Ù†Ù…ÙˆØ¯Ø§Ø± Ù‚ÛŒÙ…Øª
            ctx.strokeStyle = '#FFD700';
            ctx.lineWidth = 3;
            ctx.beginPath();
            
            for (let i = 0; i < 24; i++) {
                const x = (canvas.width / 24) * i;
                const baseY = canvas.height / 2;
                const variation = Math.sin(i * 0.5) * 50 + Math.random() * 30 - 15;
                const y = baseY + variation;
                
                if (i === 0) {
                    ctx.moveTo(x, y);
                } else {
                    ctx.lineTo(x, y);
                }
            }
            
            ctx.stroke();
            
            // Ø§ÙØ²ÙˆØ¯Ù† gradient
            const gradient = ctx.createLinearGradient(0, 0, 0, canvas.height);
            gradient.addColorStop(0, 'rgba(255, 215, 0, 0.3)');
