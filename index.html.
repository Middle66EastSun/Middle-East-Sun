        let oilPrice = 85 + Math.random() * 10;
        let gasPrice = 3.2 + Math.random() * 0.8;
        let oilHigh = oilPrice;
        let oilLow = oilPrice;
        let gasHigh = gasPrice;
        let gasLow = gasPrice;
        let previousOilPrice = oilPrice;
        let previousGasPrice = gasPrice;

        // ØªØ§Ø¨Ø¹ Ø§Ø¶Ø§ÙÙ‡ Ú©Ø±Ø¯Ù† Ø§Ù†ÛŒÙ…ÛŒØ´Ù†
        function addAnimation(element, className) {
            element.classList.add(className);
            setTimeout(() => {
                element.classList.remove(className);
            }, 500);
        }

        // ØªØ§Ø¨Ø¹ Ù…Ø­Ø§Ø³Ø¨Ù‡ ØªØºÛŒÛŒØ± Ù‚ÛŒÙ…Øª
        function calculateChange(current, previous) {
            const change = current - previous;
            const percent = ((change / previous) * 100).toFixed(2);
            const sign = change >= 0 ? '+' : '';
            const colorClass = change >= 0 ? 'positive' : 'negative';
            return `<span class="${colorClass}">${sign}${change.toFixed(2)} (${sign}${percent}%)</span>`;
        }

        // Ø¨Ù‡â€ŒØ±ÙˆØ²Ø±Ø³Ø§Ù†ÛŒ Ù‚ÛŒÙ…Øª Ù†ÙØª
        function updateOilPrice() {
            previousOilPrice = oilPrice;
            oilPrice = 80 + Math.random() * 20; // Ù…Ø­Ø¯ÙˆØ¯Ù‡ ÙˆØ§Ù‚Ø¹ÛŒâ€ŒØªØ±
            
            if (oilPrice > oilHigh) oilHigh = oilPrice;
            if (oilPrice < oilLow) oilLow = oilPrice;
            
            const oilBox = document.getElementById("oilPriceBox");
            oilBox.innerHTML = `
                Ù†ÙØª Ø¨Ø±Ù†Øª: $${oilPrice.toFixed(2)}
                <div class="price-change">${calculateChange(oilPrice, previousOilPrice)}</div>
            `;
            
            // Ø§Ù†ÛŒÙ…ÛŒØ´Ù† ØªØºÛŒÛŒØ± Ù‚ÛŒÙ…Øª
            addAnimation(oilBox, 'updated');
            if (oilPrice > previousOilPrice) {
                addAnimation(oilBox, 'price-up');
            } else if (oilPrice < previousOilPrice) {
                addAnimation(oilBox, 'price-down');
            }
            
            const highElement = document.getElementById("oilHigh");
            const lowElement = document.getElementById("oilLow");
            
            highElement.textContent = oilHigh.toFixed(2);
            lowElement.textContent = oilLow.toFixed(2);
            
            addAnimation(highElement, 'updated');
            addAnimation(lowElement, 'updated');
            
            addPointToChart(oilChart, oilPrice);
        }

